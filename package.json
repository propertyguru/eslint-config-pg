{
  "name": "@propertyguru/eslint-config-pg",
  "version": "1.2.2",
  "description": "eslint rules for typescript code base",
  "main": "index.js",
  "engines": {
    "node": "^18"
  },
  "files": [
    ".eslintrc.cjs",
    "index.js",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier ./src --check",
    "lint": "npm run eslint && npm run prettier",
    "fix": "npm run eslint -- --fix && npm run prettier -- --write",
    "print:eslint:config": "eslint --print-config ./src > './.eslintrc.js_fullsettings.js'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/propertyguru/eslint-config-pg.git"
  },
  "keywords": [
    "eslint",
    "prettier",
    "typescript"
  ],
  "author": "Agent Platform Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/propertyguru/eslint-config-pg/issues"
  },
  "homepage": "https://github.com/propertyguru/eslint-config-pg#readme",
  "publishConfig": {
    "directory": "lib",
    "@propertyguru:registry": "https://npm.pkg.github.com/propertyguru"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0"
  },
  "overrides": {
    "semver": "^7.5.3"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            ".eslintrc.cjs"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failComment": false
        }
      ],
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "echo ::set-output name=nextVer::${nextRelease.version}"
        }
      ]
    ]
  }
}
